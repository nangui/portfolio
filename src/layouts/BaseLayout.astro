---
import '../styles/global.css';
import Nav from '@components/ui/Nav.astro';
import Footer from '@components/ui/Footer.astro';
import Loader from '@components/ui/Loader.astro';
import CustomCursor3D from '@components/ui/CustomCursor3D.astro';
import { defaultLocale, type Locale } from '@i18n/config';
import { getTranslation } from '@i18n/translations';
import { getAlternateUrls } from '@i18n/utils';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  locale?: Locale;
}

const { 
  title, 
  description = "Portfolio d'Adonai Nangui - Senior Frontend Engineer & Tech Lead", 
  ogImage,
  locale = defaultLocale
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://adonainangui.dev');
const alternateUrls = getAlternateUrls(Astro.url.pathname, Astro.site ? String(Astro.site) : undefined);
const htmlLang = locale === 'fr' ? 'fr' : 'en';
const ogLocale = locale === 'fr' ? 'fr_FR' : 'en_US';
const skipToContent = getTranslation('common', 'skipToContent', locale);
---

<!doctype html>
<html lang={htmlLang} class="no-js" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="Adonai Nangui, Frontend Engineer, Tech Lead, React, Vue.js, Angular, TypeScript, Laravel, Micro Frontend, NX, Portfolio" />
    <meta name="author" content="Adonai Nangui" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="theme-color" content="#00ff88" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="Adonai Nangui - Portfolio" />
    <meta property="og:locale" content={ogLocale} />
    {alternateUrls.map(({ lang, url }) => (
      <link rel="alternate" hreflang={lang} href={url} />
    ))}
    {ogImage ? (
      <>
        <meta property="og:image" content={ogImage} />
        <meta property="og:image:secure_url" content={ogImage} />
        <meta property="og:image:type" content="image/png" />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        <meta property="og:image:alt" content={title} />
      </>
    ) : (
      <>
        <meta property="og:image" content={`${Astro.site || 'https://adonainangui.dev'}/hero-image.jpeg`} />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
      </>
    )}
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {ogImage ? (
      <>
        <meta name="twitter:image" content={ogImage} />
        <meta name="twitter:image:alt" content={title} />
      </>
    ) : (
      <meta name="twitter:image" content={`${Astro.site || 'https://adonainangui.dev'}/hero-image.jpeg`} />
    )}
    
    <!-- Schema.org Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Adonai Nangui",
      "jobTitle": "Senior Frontend Engineer / Tech Lead",
      "url": "https://adonainangui.dev",
      "sameAs": [
        "https://linkedin.com/in/adonai-nangui",
        "https://github.com/nangui"
      ],
      "knowsAbout": [
        "Frontend Development",
        "React",
        "Vue.js",
        "Angular",
        "TypeScript",
        "Micro Frontend Architecture",
        "NX",
        "Laravel",
        "PHP"
      ]
    })} />
    
    <link rel="canonical" href={canonicalURL} />
    <title>{title}</title>
    
    <!-- Remove no-js class si JavaScript est activÃ© -->
    <script is:inline>
      document.documentElement.classList.remove('no-js');
      
      // Initialize theme before page renders to prevent flash
      (function() {
        const stored = localStorage.getItem('theme');
        const prefersLight = window.matchMedia('(prefers-color-scheme: light)').matches;
        const theme = stored || (prefersLight ? 'light' : 'dark');
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
    
  </head>
  <body>
    <Loader />
    <CustomCursor3D />
    <!-- Skip to main content link for keyboard navigation -->
    <a 
      href="#main-content" 
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-accent focus:text-white focus:rounded focus:shadow-lg"
      aria-label={skipToContent}
    >
      {skipToContent}
    </a>
    <Nav locale={locale} />
    <main id="main-content" role="main">
      <slot />
    </main>
    <Footer locale={locale} />
    
    <!-- External links icons -->
    <script>
      const initExternalLinks = () => {
        import('@utils/externalLinks').then(({ addExternalLinkIcons }) => {
          addExternalLinkIcons();
        }).catch((err) => {
          console.error('Failed to load external links utility:', err);
        });
      };
      
      // Run on initial load
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initExternalLinks);
      } else {
        initExternalLinks();
      }
    </script>
  </body>
</html>
