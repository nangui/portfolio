---
const navItems = [
  { label: 'Accueil', href: '/' },
  { label: 'Projets', href: '#projects' },
  { label: 'Expérience', href: '#experience' },
  { label: 'Blog', href: '/blog' },
  { label: 'Contact', href: '#contact' },
];
---

<nav class="sticky top-0 z-50 bg-primary/80 backdrop-blur-sm border-b border-border-default">
  <div class="max-w-[1200px] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="font-heading font-semibold text-xl text-primary hover:text-accent transition-colors">
        Adonai Nangui
      </a>
      
      <ul class="hidden md:flex items-center gap-8">
        {navItems.map((item) => (
          <li>
            <a 
              href={item.href}
              class="text-secondary hover:text-accent transition-colors font-medium"
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
      
      <!-- Mobile menu button -->
      <button 
        class="md:hidden text-secondary hover:text-accent transition-colors"
        aria-label="Menu"
        id="mobile-menu-button"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Mobile menu (à implémenter avec JavaScript si nécessaire) -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-border-default bg-primary">
    <div class="max-w-[1200px] mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <ul class="flex flex-col gap-4">
        {navItems.map((item) => (
          <li>
            <a 
              href={item.href}
              class="text-secondary hover:text-accent transition-colors font-medium block"
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</nav>

<script>
  // Toggle mobile menu
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (menuButton && mobileMenu) {
    menuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
      
      // Toggle icon (hamburger / close)
      const svg = menuButton.querySelector('svg');
      if (svg) {
        if (mobileMenu.classList.contains('hidden')) {
          svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
        } else {
          svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />';
        }
      }
    });
  }
</script>
