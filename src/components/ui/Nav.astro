---
import LanguageSwitcher from '@components/i18n/LanguageSwitcher.astro';
import ThemeToggle from '@components/ui/ThemeToggle.astro';
import { defaultLocale, type Locale } from '@i18n/config';
import { getTranslation } from '@i18n/translations';
import { formatPath } from '@i18n/utils';

interface Props {
  locale?: Locale;
}

const { locale = defaultLocale } = Astro.props;

const navItems = [
  { key: 'home', href: '/' },
  { key: 'projects', href: '#projects' },
  { key: 'experience', href: '#experience' },
  { key: 'blog', href: '/blog' },
  { key: 'contact', href: '#contact' },
];

const openMenuLabel = getTranslation('nav', 'openMenu', locale);
const closeMenuLabel = getTranslation('nav', 'closeMenu', locale);
---

<nav class="sticky top-0 z-40 bg-primary/80 backdrop-blur-sm border-b border-border-default" role="navigation" aria-label="Navigation principale">
  <div class="max-w-[1200px] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <a href={formatPath('/', locale)} class="font-heading font-semibold text-xl text-primary hover:text-accent transition-colors" aria-label="Adonai Nangui - Retour Ã  l'accueil">
        Adonai Nangui
      </a>
      
      <div class="hidden md:flex items-center gap-6">
        <ul class="flex items-center gap-8" role="menubar">
          {navItems.map((item) => {
            const href = item.href.startsWith('#') 
              ? item.href 
              : formatPath(item.href, locale);
            const label = getTranslation('nav', item.key, locale);
            return (
              <li role="none">
            <a 
                  href={href}
              class="text-secondary hover:text-accent transition-colors font-medium"
                  role="menuitem"
                  aria-label={label}
            >
                  {label}
            </a>
          </li>
            );
          })}
      </ul>
        <ThemeToggle />
        <LanguageSwitcher currentLocale={locale} currentPath={Astro.url.pathname} />
      </div>
      
      <div class="md:hidden flex items-center gap-4">
        <ThemeToggle />
        <LanguageSwitcher currentLocale={locale} currentPath={Astro.url.pathname} />
        <!-- Mobile menu button -->
        <button 
          class="text-secondary hover:text-accent transition-colors focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent rounded"
          aria-label={openMenuLabel}
          aria-expanded="false"
          aria-controls="mobile-menu"
          id="mobile-menu-button"
          data-open-label={openMenuLabel}
          data-close-label={closeMenuLabel}
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-border-default bg-primary" role="menu" aria-labelledby="mobile-menu-button">
    <div class="max-w-[1200px] mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <ul class="flex flex-col gap-4" role="menubar">
        {navItems.map((item) => {
          const href = item.href.startsWith('#') 
            ? item.href 
            : formatPath(item.href, locale);
          const label = getTranslation('nav', item.key, locale);
          return (
            <li role="none">
            <a 
                href={href}
                class="text-secondary hover:text-accent transition-colors font-medium block focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent rounded"
                role="menuitem"
                aria-label={label}
              >
                {label}
            </a>
          </li>
          );
        })}
      </ul>
    </div>
  </div>
</nav>

<script>
  // Mobile menu management with cleanup to prevent duplicate listeners
  let menuHandlers: { cleanup: () => void } | null = null;

  const initMobileMenu = () => {
    // Cleanup existing handlers if any
    if (menuHandlers) {
      menuHandlers.cleanup();
      menuHandlers = null;
    }

    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (!menuButton || !mobileMenu) return;

    // Helper function to check if menu is open
    const isMenuOpen = () => !mobileMenu.classList.contains('hidden');
    
    // Get labels from data attributes
    const openLabel = menuButton.getAttribute('data-open-label') || 'Ouvrir le menu de navigation';
    const closeLabel = menuButton.getAttribute('data-close-label') || 'Fermer le menu de navigation';
    
    // Helper function to close menu
    const closeMenu = () => {
      mobileMenu.classList.add('hidden');
      menuButton.setAttribute('aria-expanded', 'false');
      menuButton.setAttribute('aria-label', openLabel);
      
      // Update icon to hamburger
      const svg = menuButton.querySelector('svg');
      if (svg) {
          svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
      }
      
      // Unlock body scroll
      document.body.style.overflow = '';
    };
    
    // Helper function to open menu
    const openMenu = () => {
      mobileMenu.classList.remove('hidden');
      menuButton.setAttribute('aria-expanded', 'true');
      menuButton.setAttribute('aria-label', closeLabel);
      
      // Update icon to close
      const svg = menuButton.querySelector('svg');
      if (svg) {
        svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />';
      }
      
      // Lock body scroll when menu is open
      document.body.style.overflow = 'hidden';
    };
    
    // Event handlers
    const handleButtonClick = (e: Event) => {
      e.stopPropagation();
      if (isMenuOpen()) {
        closeMenu();
      } else {
        openMenu();
      }
    };

    const handleDocumentClick = (e: Event) => {
      // Early return if event was stopped
      if (e.defaultPrevented) return;
      
      if (isMenuOpen()) {
        const target = e.target as Node;
        // Don't close menu if clicking on ThemeToggle, LanguageSwitcher, or their children
        const themeToggle = document.getElementById('theme-toggle');
        const languageSwitcher = document.querySelector('[data-language-switcher]');
        
        const isClickOnThemeToggle = themeToggle && (
          themeToggle.contains(target) || themeToggle === target
        );
        const isClickOnLanguageSwitcher = languageSwitcher && (
          languageSwitcher.contains(target) || languageSwitcher === target
        );
        
        if (!mobileMenu.contains(target) && 
            !menuButton.contains(target) &&
            !isClickOnThemeToggle &&
            !isClickOnLanguageSwitcher) {
          closeMenu();
        }
      }
    };

    let scrollTimeout: ReturnType<typeof setTimeout> | null = null;
    const handleScroll = () => {
      if (isMenuOpen()) {
        if (scrollTimeout) {
          clearTimeout(scrollTimeout);
        }
        scrollTimeout = setTimeout(() => {
          closeMenu();
        }, 100);
      }
    };

    const handleKeydown = (e: KeyboardEvent) => {
      if (e.key === 'Escape' && isMenuOpen()) {
        closeMenu();
        menuButton.focus();
      }
    };

    const handleLinkClick = () => {
      closeMenu();
    };
    
    // Attach event listeners
    // Use capture: false to ensure button handlers run first
    menuButton.addEventListener('click', handleButtonClick, { capture: false });
    document.addEventListener('click', handleDocumentClick, { capture: false });
    window.addEventListener('scroll', handleScroll, { passive: true });
    document.addEventListener('keydown', handleKeydown);
    
    // Close menu when clicking on a menu link (navigation)
    const menuLinks = mobileMenu.querySelectorAll('a');
    menuLinks.forEach((link) => {
      link.addEventListener('click', handleLinkClick);
    });

    // Store cleanup function
    menuHandlers = {
      cleanup: () => {
        menuButton.removeEventListener('click', handleButtonClick);
        document.removeEventListener('click', handleDocumentClick);
        window.removeEventListener('scroll', handleScroll);
        document.removeEventListener('keydown', handleKeydown);
        menuLinks.forEach((link) => {
          link.removeEventListener('click', handleLinkClick);
        });
        if (scrollTimeout) {
          clearTimeout(scrollTimeout);
        }
        closeMenu(); // Ensure menu is closed
      }
    };
  };

  // Initialize on load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMobileMenu);
  } else {
    initMobileMenu();
  }

  // Reinitialize on Astro page transitions
  document.addEventListener('astro:page-load', initMobileMenu);
</script>
