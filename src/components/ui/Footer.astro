---
import { defaultLocale, type Locale } from '@i18n/config';
import { getTranslation } from '@i18n/translations';

interface Props {
  locale?: Locale;
}

const { locale = defaultLocale } = Astro.props;

const socialLinks = [
  { key: 'linkedin', href: 'https://linkedin.com/in/adonai-nangui' },
  { key: 'github', href: 'https://github.com/nangui' },
];

const currentYear = new Date().getFullYear();
const copyright = getTranslation('footer', 'copyright', locale);
---

<footer class="border-t border-border-default/50 bg-primary">
  <div class="max-w-[1200px] mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <!-- Copyright -->
      <div class="text-secondary/80 text-sm order-2 md:order-1">
        Â© {currentYear} Adonai Nangui. {copyright}.
      </div>
      
      <!-- Links -->
      <nav class="flex items-center gap-8 order-1 md:order-2" aria-label="Footer navigation">
        {socialLinks.map((link) => {
          const label = getTranslation('footer', link.key, locale);
          return (
          <a 
            href={link.href}
              target={link.href.startsWith('http') ? '_blank' : undefined}
              rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
              class="text-secondary/80 hover:text-accent transition-colors duration-200 text-sm font-medium"
              aria-label={label}
          >
              {label}
          </a>
          );
        })}
      </nav>
    </div>
  </div>
</footer>

<style>
  footer {
    backdrop-filter: blur(10px);
  }

  footer a {
    position: relative;
  }

  footer a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background-color: currentColor;
    transition: width 0.3s ease;
  }

  footer a:hover::after {
    width: 100%;
  }
</style>
