---
import Button from '@components/ui/Button.astro';
import HeroImage from '@components/ui/HeroImage.astro';
import TextDistortion from '@components/ui/TextDistortion.astro';
import SectionTranslator from '@components/i18n/SectionTranslator.astro';
import { getSectionLocale } from '@utils/i18n/useSectionI18n';
import { getTranslation } from '@utils/i18n/translations';

const sectionId = 'hero';
const currentLocale = getSectionLocale(sectionId, 'fr');
---

<section id="hero" class="min-h-[80vh] flex items-center justify-center bg-primary py-12 md:py-16 relative">
  <SectionTranslator sectionId={sectionId} position="top-right" />
  
  <div class="max-w-[1200px] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-12">
      <!-- Image avec effet 3D -->
      <div class="shrink-0 order-2 lg:order-1">
        <HeroImage />
      </div>
      
      <!-- Contenu texte -->
      <div class="flex-1 text-center lg:text-left order-1 lg:order-2">
        <TextDistortion>
          <h1 class="font-heading font-semibold text-5xl md:text-6xl lg:text-7xl mb-6 text-primary" data-i18n-key="name">
            {getTranslation(sectionId, 'name', currentLocale)}
          </h1>
        </TextDistortion>
        <TextDistortion>
          <p class="font-heading font-medium text-2xl md:text-3xl mb-4 text-secondary" data-i18n-key="title">
            {getTranslation(sectionId, 'title', currentLocale)}
          </p>
        </TextDistortion>
        <TextDistortion>
          <p class="text-lg md:text-xl text-secondary max-w-2xl mx-auto lg:mx-0 mb-8" data-i18n-key="tagline">
            {getTranslation(sectionId, 'tagline', currentLocale)}
          </p>
        </TextDistortion>
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <Button href="#projects" variant="primary" size="lg">
            <span data-i18n-key="ctaProjects">{getTranslation(sectionId, 'ctaProjects', currentLocale)}</span>
          </Button>
          <Button href="#contact" variant="secondary" size="lg">
            <span data-i18n-key="ctaContact">{getTranslation(sectionId, 'ctaContact', currentLocale)}</span>
          </Button>
        </div>
      </div>
    </div>
  </div>
</section>
