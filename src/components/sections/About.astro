---
import { defaultLocale, type Locale } from '@i18n/config';
import { getTranslation } from '@i18n/translations';

interface Props {
  locale?: Locale;
}

const { locale = defaultLocale } = Astro.props;
---

<section id="about" class="py-section bg-primary relative">
  <div class="max-w-[1200px] mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="font-heading font-semibold text-3xl md:text-4xl mb-6 text-primary">
      {getTranslation('about', 'heading', locale)}
    </h2>
    <div class="max-w-3xl space-y-4">
      <p class="text-lg text-secondary leading-relaxed">
        {getTranslation('about', 'paragraph1', locale)}
      </p>
      <p class="text-lg text-secondary leading-relaxed">
        {getTranslation('about', 'paragraph2', locale)}
      </p>
    </div>
  </div>
</section>
