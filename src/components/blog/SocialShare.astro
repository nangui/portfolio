---
import { defaultLocale, type Locale } from '@i18n/config';

interface Props {
  title: string;
  url: string;
  description?: string;
  locale?: Locale;
}

const { title, url, description = '', locale = defaultLocale } = Astro.props;

// Encode URLs for sharing
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);

// Social sharing URLs
const twitterUrl = `https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`;
const linkedInUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`;
const emailUrl = `mailto:?subject=${encodedTitle}&body=${encodedUrl}`;

const shareText = locale === 'fr' ? 'Partager cet article :' : 'Share this post on:';
---

<div class="social-share mt-12 mb-8">
  <p class="text-sm text-secondary font-medium mb-4">{shareText}</p>
  <div class="flex flex-wrap items-center gap-2">
    <!-- Twitter / X -->
    <a
      href={twitterUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="social-share-link inline-flex items-center justify-center w-10 h-10 rounded-full bg-secondary/30 hover:bg-secondary border border-border-default hover:border-accent transition-all"
      aria-label="Share on X"
      title="X (Twitter)"
    >
      <svg class="w-5 h-5 text-secondary" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
      </svg>
    </a>

    <!-- LinkedIn -->
    <a
      href={linkedInUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="social-share-link inline-flex items-center justify-center w-10 h-10 rounded-full bg-secondary/30 hover:bg-secondary border border-border-default hover:border-accent transition-all"
      aria-label="Share on LinkedIn"
      title="LinkedIn"
    >
      <svg class="w-5 h-5 text-secondary" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
      </svg>
    </a>

    <!-- Email -->
    <a
      href={emailUrl}
      class="social-share-link inline-flex items-center justify-center w-10 h-10 rounded-full bg-secondary/30 hover:bg-secondary border border-border-default hover:border-accent transition-all"
      aria-label="Share via email"
      title="Email"
    >
      <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
      </svg>
    </a>
  </div>
</div>

<style>
  .social-share-link:hover svg {
    color: var(--color-accent);
  }
  
  .social-share-link:focus {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }
</style>
