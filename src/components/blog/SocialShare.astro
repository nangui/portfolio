---
interface Props {
  title: string;
  url: string;
  description?: string;
}

const { title, url, description = '' } = Astro.props;

// Encode URLs for sharing
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);

// Social sharing URLs
const twitterUrl = `https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`;
const linkedInUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`;
---

<div class="social-share flex items-center gap-4 pt-6 border-t border-border-default">
  <span class="text-sm text-secondary font-medium">Partager :</span>
  <div class="flex items-center gap-3">
    <!-- Twitter -->
    <a
      href={twitterUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="social-share-button group flex items-center gap-2 px-4 py-2 bg-secondary/50 border border-border-default rounded-lg hover:bg-secondary hover:border-accent transition-all"
      aria-label="Partager sur Twitter"
    >
      <svg class="w-5 h-5 text-secondary group-hover:text-accent transition-colors" fill="currentColor" viewBox="0 0 24 24">
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
      </svg>
      <span class="text-sm text-secondary group-hover:text-accent transition-colors hidden sm:inline">Twitter</span>
    </a>

    <!-- LinkedIn -->
    <a
      href={linkedInUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="social-share-button group flex items-center gap-2 px-4 py-2 bg-secondary/50 border border-border-default rounded-lg hover:bg-secondary hover:border-accent transition-all"
      aria-label="Partager sur LinkedIn"
    >
      <svg class="w-5 h-5 text-secondary group-hover:text-accent transition-colors" fill="currentColor" viewBox="0 0 24 24">
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
      </svg>
      <span class="text-sm text-secondary group-hover:text-accent transition-colors hidden sm:inline">LinkedIn</span>
    </a>

    <!-- Copy Link -->
    <button
      type="button"
      class="copy-link-button group flex items-center gap-2 px-4 py-2 bg-secondary/50 border border-border-default rounded-lg hover:bg-secondary hover:border-accent transition-all"
      aria-label="Copier le lien"
      data-copy-url={url}
    >
      <svg class="w-5 h-5 text-secondary group-hover:text-accent transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
      </svg>
      <span class="text-sm text-secondary group-hover:text-accent transition-colors hidden sm:inline">Copier</span>
    </button>
  </div>
</div>

<script>
  // Copy link functionality
  if (typeof document !== 'undefined') {
    const copyButtons = document.querySelectorAll('.copy-link-button');
    
    copyButtons.forEach((button) => {
      button.addEventListener('click', async () => {
        const urlToCopy = button.getAttribute('data-copy-url') || window.location.href;
        
        try {
          await navigator.clipboard.writeText(urlToCopy);
          
          // Visual feedback
          const originalText = button.querySelector('span')?.textContent || 'Copier';
          const icon = button.querySelector('svg');
          
          // Change icon to checkmark
          if (icon) {
            icon.innerHTML = `
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            `;
            icon.classList.add('text-accent');
          }
          
          if (button.querySelector('span')) {
            button.querySelector('span')!.textContent = 'CopiÃ© !';
            button.querySelector('span')!.classList.add('text-accent');
          }
          
          // Reset after 2 seconds
          setTimeout(() => {
            if (icon) {
              icon.innerHTML = `
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
              `;
              icon.classList.remove('text-accent');
            }
            if (button.querySelector('span')) {
              button.querySelector('span')!.textContent = originalText;
              button.querySelector('span')!.classList.remove('text-accent');
            }
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
          // Fallback for older browsers
          const textArea = document.createElement('textarea');
          textArea.value = urlToCopy;
          document.body.appendChild(textArea);
          textArea.select();
          document.execCommand('copy');
          document.body.removeChild(textArea);
        }
      });
    });
  }
</script>

<style>
  .social-share-button,
  .copy-link-button {
    cursor: pointer;
  }
  
  .social-share-button:focus,
  .copy-link-button:focus {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }
</style>
